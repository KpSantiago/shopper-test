generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MeasureType {
  WATER
  GAS
}

model Measure {
  measure_uuid     String      @id @default(uuid())
  image_url        String
  measure_type     MeasureType
  measure_datetime DateTime
  has_confirmed    Boolean
  measure_value    Float

  @@map("measure")
}
